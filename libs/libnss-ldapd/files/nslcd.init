#! /bin/sh /etc/rc.common

START=50
STOP=50

USE_PROCD=1

start_service() {
	procd_open_instance
	procd_set_param command /usr/sbin/nslcd
	procd_append_param command -n
	procd_set_param file /etc/nslcd.conf
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param pidfile /var/run/nslcd/nslcd.pid
	procd_close_instance
}

service_running() {
	pgrep -x /usr/sbin/nslcd &> /dev/null
}
